@model APTEKA_Software.Models.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Редактиране на артикул";
}

<div class="container">
    <h2>Редактиране на артикул</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label for="Name">Име:</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
        </div>
        <div class="form-group">
            <label for="SalePrice">Продажна цена:</label>
            <input type="text" class="form-control" id="SalePrice" name="SalePrice" value="@Model.SalePrice" />
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Запази промените</button>
    </form>
</div>
