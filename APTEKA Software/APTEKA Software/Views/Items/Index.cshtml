@using APTEKA_Software.Models.ViewModels
@model List<ItemViewModel>
@{
    ViewData["Title"] = "Списък с артикули";
}
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Списък с артикули</h2>
    <p>
        <a class="nav-link" href="Items/Create/">Създай Нов Артикул</a>
        <a class="nav-link" href="Sales/Index/">История на продажбите</a>
        <a class="nav-link" href="Delivery/Index/">История на доставките</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Наличност</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.AvailableQuantity</td>
                    <td>@item.SalePrice</td>
                    <td>
                        <a class="nav-link" href="/Items/Edit/@item.ItemId">Редактирай</a>
                        <a class="nav-link" href="/Items/ConfirmDelete/@item.ItemId">Изтрий</a>
                        <a class="nav-link" href="/Sales/MakeSale/@item.ItemId">Направи Продажба</a>
                        <a class="nav-link" href="/Delivery/MakeDelivery/@item.ItemId">Направи доставка</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
