@using APTEKA_Software.Models.ViewModels
@model List<ItemViewModel>
@{
    ViewData["Title"] = "Списък с артикули";
}
@{
    Layout = "_Layout";
}

<div class="container">
    <h2>Списък с артикули</h2>
    @using (Html.BeginForm("FilteredItems", "Items", FormMethod.Get))
    {
        <div class="form-inline mb-3">
            <div class="form-group mr-2">
                @Html.DropDownList("filterByItem", new SelectList(ViewBag.ItemNames), "Изберете артикул", new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Филтрирай</button>
        </div>
    }
    <a class="btn btn-success" href="Items/Create/">Създай Нов Артикул</a>
    <table class="table">
        <thead>
            <tr>
                <th>Име</th>
                <th>Наличност</th>
                <th>Цена за една бройка</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.AvailableQuantity</td>
                    <td>@item.SalePrice</td>
                    <td>
                        <a class="nav-link text-success" href="/Sales/MakeSale/@item.ItemId">Направи продажба</a>
                        <a class="nav-link text-info" href="/Delivery/MakeDelivery/@item.ItemId">Направи доставка</a>
                        <a class="nav-link text-warning" href="/Items/Edit/@item.ItemId">Редактирай артикул</a>
                        <a class="nav-link text-danger" href="/Items/ConfirmDelete/@item.ItemId">Изтрий артикул</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model is List<ItemViewModel> items && items.Count > 0)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (ViewBag.paginationViewModel.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Items/Index?pageIndex=@(ViewBag.paginationViewModel.PageIndex - 1)">Предишна</a>
                    </li>
                }
                <li class="page-item active">
                    <span class="page-link">Страница @(ViewBag.paginationViewModel.PageIndex) от @(ViewBag.paginationViewModel.TotalPages)</span>
                </li>
                @if (ViewBag.paginationViewModel.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Items/Index?pageIndex=@(ViewBag.paginationViewModel.PageIndex + 1)">Следваща</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
