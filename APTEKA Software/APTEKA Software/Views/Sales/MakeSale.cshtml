@model APTEKA_Software.Models.ViewModels.SaleViewModel

@{
    ViewData["Title"] = "Продажба на артикули";
    Layout = "_Layout";
}

<div class="container">
    <h2>Продажба на артикули</h2>
    <form asp-action="MakeSale" method="post">
        <div class="form-group">
            <label asp-for="ItemId">Изберете артикул</label>
            <select asp-for="ItemId" class="form-control">
                <option value="">Изберете артикул</option>
                @foreach (var item in Model.AvailableItems)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <span asp-validation-for="ItemId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="QuantitySold">Количество</label>
            <input asp-for="QuantitySold" class="form-control" />
            <span asp-validation-for="QuantitySold" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Добави към продажбата</button>
    </form>
    <hr />

    <h3>Обща стойност на продажбата: @Model.TotalAmount</h3>
   
    <form asp-action="CompleteSale" method="post">
        <button type="submit" class="btn btn-success">Завърши продажбата</button>
    </form>
</div>
