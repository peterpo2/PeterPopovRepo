@model APTEKA_Software.Models.ViewModels.SaleViewModel

@{
    ViewData["Title"] = "Продажба на артикули";
    Layout = "_Layout";
}

<div class="container">
    <h2>Продажба на артикули</h2>
    <form asp-action="MakeSale" method="post">
        <div class="form-group">
            <label asp-for="ItemId">Изберете артикул</label>
            <select asp-for="ItemId" class="form-control">
                <option value="">Изберете артикул</option>
                @* @foreach (var item in Model.AvailableItems)
                {
                    <option value="@item.Value">@item.Text (Продажна цена: @item.SalePrice)</option>
                } *@
            </select>
            <span asp-validation-for="ItemId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity">Количество</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Добави към продажбата</button>
    </form>
    <hr />
    <h3>Обща стойност на продажбата: @Model.TotalSaleValue</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Артикул</th>
                <th>Количество</th>
                <th>Продажна цена</th>
                <th>Стойност</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var saleItem in Model.SaleItems)
            {
                <tr>
                    <td>@saleItem.ItemName</td>
                    <td>@saleItem.Quantity</td>
                    <td>@saleItem.SalePrice</td>
                    <td>@saleItem.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="CompleteSale" method="post">
        <button type="submit" class="btn btn-success">Завърши продажбата</button>
    </form>
</div>
