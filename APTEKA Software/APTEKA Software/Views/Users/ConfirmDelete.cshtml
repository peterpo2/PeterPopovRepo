@model APTEKA_Software.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h2>Delete User</h2>

<h2>Сигурни ли сте, че искате да изтриете потребителя "@Model.Username"?</h2>
<form method="post" action="@Url.Action("ConfirmDelete", "Users")">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="confirm" value="true" />
    <input type="submit" value="Да" class="btn btn-danger" />
</form>
<form method="get" action="@Url.Action("Index", "Users")">
    <input type="submit" value="Не" class="btn btn-secondary" />
</form>
