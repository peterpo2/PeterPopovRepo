@using APTEKA_Software.Models.ViewModels
@model List<DeliveryViewModel>

@{
    ViewData["Title"] = "Списък с доставки";
}
@{
    Layout = "_Layout";
}

<h2>Списък с доставки</h2>

<table class="table">
    <thead>
        <tr>
            <th>Доставчик</th>
            <th>Артикул</th>
            <th>Дата на Доставка</th>
            <th>Количество доставено</th>
            <th>Сума на доставката</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var delivery in Model)
        {
            <tr>
                <td>@delivery.UserName</td>
                <td>@delivery.ItemName</td>
                <td>@delivery.DeliveryDate.ToString("dd/MM/yyyy")</td>
                <td>@delivery.QuantityDelivered</td>
                <td>@delivery.DeliverySum</td>
            </tr>
        }
    </tbody>
</table>
