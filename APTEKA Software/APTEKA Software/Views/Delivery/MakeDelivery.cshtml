@model APTEKA_Software.Models.ViewModels.ItemViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Създай Доставка";
    Layout = "_Layout";
}
<h2>Създай Нова Доставка</h2>

<div class="container">
    <h2>Направи доставка</h2>
    <p>
        <a class="nav-link" asp-controller="Items" asp-action="Index">Обратно към списъка с артикули</a>
    </p>

    <form asp-controller="Delivery" asp-action="MakeDelivery" method="post">
        <div class="form-group">
            <label for="ItemName">Име:</label>
            <input type="text" class="form-control" id="ItemName" name="ItemName" value="@Model.ItemName" />
        </div>
        <div class="form-group">
            <label for="RemainingQuantity">Оставащо количество:</label>
            <input type="text" id="RemainingQuantity" class="form-control" value="@Model.AvailableQuantity">
        </div>
        <div class="form-group">
            <label for="SalePrice">Цена на артикула:</label>
            <input type="text" id="SalePrice" class="form-control" value="@Model.SalePrice">
        </div>
        <div class="form-group">
            <label for="QuantityDelivered">Количество за доставка:</label>
            <input type="number" id="QuantityDelivered" class="form-control" name="QuantityDelivered" min="1">
        </div>
        <button type="submit" class="btn btn-primary">Направи доставка</button>
    </form>
</div>

