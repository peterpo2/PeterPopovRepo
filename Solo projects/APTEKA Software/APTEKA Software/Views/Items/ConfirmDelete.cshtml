@model APTEKA_Software.Models.Item

@{
    Layout = "_Layout";
}

<h2>Сигурни ли сте, че искате да изтриете артикула "@Model.ItemName"?</h2>

<div class="text-center">
    <form method="post" action="@Url.Action("ConfirmDelete", "Items")" style="display: inline-block;">
        <input type="hidden" name="id" value="@Model.ItemId" />
        <input type="hidden" name="confirm" value="true" />
        <input type="submit" value="Да" class="btn btn-danger" />
    </form>

    <form method="get" action="@Url.Action("Index", "Items")" style="display: inline-block;">
        <input type="submit" value="Не" class="btn btn-secondary" />
    </form>
</div>
