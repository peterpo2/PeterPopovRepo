@model User

<div class="container card-body mx-auto" style="max-width: 600px;">
    <div class="row">
        <div class="col-md-12 mb-4">
            <h5 class="text-center" style="color: black;">
                <strong class="display-4">Are you sure you want to demote <b>@this.Model.Username</b>?</strong><br />
            </h5>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="form-group">
                <form asp-controller="Admins" asp-action="Demote" method="post">
                    <input type="submit" value="Demote" class="btn btn-dark btn-block" />
                </form><br />
                <a asp-controller="Admins" asp-action="Index" class="btn btn-outline-secondary btn-block">Back</a>
            </div>
        </div>
    </div>
</div>