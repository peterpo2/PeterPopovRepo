@using Gaming_Forum.Models
@using Gaming_Forum.Services
@inject AuthManager authManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BestGamingForum - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: white;
        }

        .jumbotron {
            background-color: darkseagreen;
        }

            .jumbotron h1,
            .jumbotron p {
                color: white;
            }

        .navbar {
            background-color: darkseagreen;
        }

        .navbar-brand {
            color: white;
        }

        .navbar-toggler-icon,
        .navbar-toggler-label {
            color: white;
        }

        .offcanvas-header {
            background-color: darkseagreen;
        }

        .offcanvas-body {
            background-color: darkseagreen;
        }

        .navbar-text {
            color: white;
        }

        .body-content {
            margin-top: 70px;
        }

        footer {
            background-color: darkseagreen;
            color: white;
            padding: 10px 0;
        }

        code {
            font-family: 'Fira Code', monospace;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Roboto:wght@300&family=Fira+Code&display=swap" rel="stylesheet">
</head>
<body class="border-0 bd-example">
    <nav class="navbar bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand p-4" asp-area="" asp-controller="Home" asp-action="Index" style="color: white; font-size: 24px;">
                <strong><span style="font-weight: bold;">BGF</span></strong>
            </a>


            <button class="navbar-toggler m-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation" style="color: white; background-color: transparent; border-color: transparent;">
                <span class="navbar-toggler-icon"></span>
                <span class="navbar-toggler-label">Menu</span>
            </button>


            <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index" style="font-weight: bold; color: black;">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Posts" asp-action="Index" style="font-weight: bold; color: black;">Posts</a>
                        </li>
                        <li class="nav-item">
                            @if (authManager.CurrentUser != null && authManager.CurrentUser.IsAdmin)
                            {
                                <a class="nav-link" asp-controller="Admins" asp-action="Index" style="font-weight: bold; color: black;">Users</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About" style="font-weight: bold; color: black;">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/api/swagger" style="font-weight: bold; color: black;">Developer API</a>
                        </li>

                        <br />

                        <li class="nav-item">
                            @if (authManager.CurrentUser == null)
                            {
                                <a asp-controller="Users" asp-action="Login" class="btn btn-outline-dark" style="color: white; font-weight: bold; background-color: black;">Login/Register</a>


                            }
                            else
                            {
                                <a class="btn btn-outline-dark" asp-area="" asp-controller="Users" asp-action="Profile" asp-route-id="@authManager.CurrentUser.Id" style="color: white; font-weight: bold; background-color: black;">Profile</a>

                                <a asp-controller="Users" asp-action="Logout" class="btn btn-outline-dark" style="color: white; font-weight: bold; background-color: black;">Logout</a>

                            }
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <header>
        <nav>
            <span class="navbar-text ms-auto me-4" style="color: black; font-weight: bold;">
                @if (authManager.CurrentUser != null)
                {
                    <span>Logged in as: <strong>@authManager.CurrentUser.Username</strong></span>
                }
                else
                {
                    <span>Not Logged In</span>
                }
            </span>

        </nav>
    </header>

    <div class="body-content">
        @RenderBody()
    </div>

    <footer class="d-flex justify-content-center">
        <small>© @DateTime.Now.Year, BestGamingForum</small>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
