@model RegisterViewModel

<br />


<div class="container-xl px-4 mt-4">

    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Details</div>
                <div class="card-body">
                    <form asp-controller="Users" asp-action="Profile" method="post">
                        <!-- Form Group (username)-->
                        <div class="mb-3 row">
                            <label class=" col-sm-2 col-form-label" for="staticEmail">Username:</label>
                            <div class="col-sm-10">
                                <input asp-for="Username" readonly class="form-control-plaintext" id="staticEmail" type="text" value="@this.Model.Username">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class=" col-sm-2 col-form-label" for="staticEmail">Is admin:</label>
                            <div class="col-sm-10">
                                <input asp-for="IsAdmin" readonly class="form-control-plaintext" id="staticEmail" type="text" value="@this.Model.IsAdmin">
                            </div>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">First name</label>
                                <input asp-for="FirstName" class="form-control" id="inputFirstName" type="text" placeholder="Enter your first name" value="@this.Model.FirstName">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Last name</label>
                                <input asp-for="LastName" class="form-control" id="inputLastName" type="text" placeholder="Enter your last name" value="@this.Model.LastName">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (password)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Password</label>
                                <input asp-for="Password" class="form-control" id="inputFirstName" type="password" placeholder="New password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <!-- Form Group (confirm password)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Repeat password</label>
                                <input asp-for="ConfirmPassword" class="form-control" id="inputLastName" type="password" placeholder="Confirm new password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Email address</label>
                            <input asp-for="Email" class="form-control" id="inputEmailAddress" type="email" placeholder="Enter your email address" value="@this.Model.Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            @if (Model.IsAdmin)
                            {
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPhone">Phone number</label>
                                    <input asp-for="PhoneNumber" class="form-control" id="inputPhone" type="tel" placeholder="Enter" value="@this.Model.PhoneNumber">
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            }
                        </div>
                        <!-- Save changes button-->
                        <button type="submit" class="btn btn-dark">Save changes</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary " type="button">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>