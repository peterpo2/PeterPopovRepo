@{
    this.ViewData["Title"] = "Beers";
    var isLogged = Context.Session.Keys.Contains("LoggedUser");
}

@model PaginatedList<Beer>

<h2>Beers</h2>

@if (isLogged) {
    <p>
        <a asp-controller="Beers" asp-action="Create" class="btn btn-primary">Create a new beer</a>
    </p>
}
<p>Find a beer</p>
<form asp-controller="Beers" asp-action="Index" method="get">
    <input type="text" name="Name"/>
    <input type="number" name="MinAbv"/>
    <input type="number" name="MaxAbv" />
    <input type ="submit" value="Search" class="btn btn-primary" />
</form>

@if (this.Model.Count() == 0)
{
    <p>
        <i>No beers 😔</i>
    </p>
}
else
{
    <div class="table">
        <div class="header">
            <div class="header-cell">Name</div>
            <div class="header-cell">% ABV</div>
            <div class="header-cell">Style</div>
            <div class="header-cell">Actions</div>
        </div>

        @foreach (var beer in this.Model)
        {
            <div class="row">
                <div class="cell">@beer.Name</div>
                <div class="cell">@beer.Abv</div>
                <div class="cell">@beer.Style.Name</div>
                <div class="cell">
                    <a asp-controller="Beers" asp-action="Details" asp-route-id="@beer.Id" class="btn btn-primary">Details</a>
                    <a asp-controller="Beers" asp-action="Edit" asp-route-id="@beer.Id" class="btn btn-warning">Edit</a>
                    <a asp-controller="Beers" asp-action="Delete" asp-route-id="@beer.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    </div>
}
@{
    string prevButtonState = this.Model.HasPrevPage ? "" : "disabled";
    string nextButtonState = this.Model.HasNextPage ? "" : "disabled";
}

<a asp-controller="Beers" asp-action="Index" asp-route-PageNumber="@(this.Model.PageNumber - 1)" class="btn btn-link @prevButtonState">Prev</a>
@{
    int currentPageNumber = this.Model.PageNumber;

    for (int i = 1; i <= this.Model.TotalPages; i++)
    {
        if (i == currentPageNumber)
        {
            <span>@i</span>
        }
        else
        {
            <span><a asp-controller="Beers" asp-action="Index" asp-route-PageNumber="@i">@i</a></span>
        }
        
    }
}
<a asp-controller="Beers" asp-action="Index" asp-route-PageNumber="@(this.Model.PageNumber + 1)" class="btn btn-link @nextButtonState">Next</a>