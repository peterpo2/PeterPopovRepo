@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>BeerOverflow - About</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<div>
			<h3>
				<!-- Using tag helpers -->
				<a asp-controller="Home" asp-action="Index" class="nav">Home</a>
				| <a asp-controller="Beers" asp-action="Index" class="nav">Beers</a>
				| <a asp-controller="Home" asp-action="About" class="nav">About</a>
				| <a href="/api/swagger" class="nav">Developer API</a>
			</h3>
		</div>
	</header>

	<div class="body-content">
		<h2>About the project</h2>

		<p>
			<b>BeerOverflow</b> is a social network for sharing experience about drinking beer, mainly craft ones.
		</p>
	</div>

	<footer>
		<small>© Copyright @DateTime.Now.Year, BeerOverflow</small>
	</footer>
</body>
</html>
