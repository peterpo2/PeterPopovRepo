@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AspNetCoreDemo.Models.BeerViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>BeerOverflow - Edit</title>
	<link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
	<header>
		<div>
			<h3>
				<a asp-controller="Home" asp-action="Index" class="nav">Home</a>
				| <a asp-controller="Beers" asp-action="Index" class="nav">Beers</a>
				| <a asp-controller="Home" asp-action="About" class="nav">About</a>
				| <a href="/api/swagger" class="nav">Developer API</a>
			</h3>
		</div>
	</header>
	<div class="body-content">
		<h2>@this.Model.Name</h2>
		<form asp-controller="Beers" asp-action="Edit" method="post">
			@*
			Updating the name of a beer is not allowed according to project requirements. ¯\_(ツ)_/¯
			*@

			<input asp-for="Name" type="hidden" class="form-input" />

			<label asp-for="Abv" class="form-label"></label>
			<br />
			<input asp-for="Abv" type="number" step="any" class="form-input" />
			<br />
			<span asp-validation-for="Abv" class="form-error"></span>

			<label asp-for="StyleId" class="form-label"></label>
			<br />
			<select asp-items="@Model.Styles" asp-for="StyleId" class="form-input"></select>
			<br />
			<span asp-validation-for="StyleId" class="form-error"></span>

			<input type="submit" value="Save" class="btn-primary" />
			<a asp-controller="Beers" asp-action="Index" class="nav">Back</a>
		</form>
	</div>
	<footer>
		<small>© Copyright @DateTime.Now.Year, BeerOverflow</small>
	</footer>
</body>
</html>